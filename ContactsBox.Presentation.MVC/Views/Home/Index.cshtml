@model IEnumerable<ContactsBox.Presentation.MVC.ViewModels.ContactViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="col-md-12">
        <h2>Contatos</h2>
        <div class="row">
            <div class="col-md-4 col-md-offset-3">
                <form action="" class="search-form">
                    <div class="form-group has-feedback">
                        <label for="search" class="sr-only">Pesquisar</label>
                        <input type="text" class="form-control" name="search" id="search" placeholder="search">
                        <span class="glyphicon glyphicon-search form-control-feedback"></span>
                    </div>
                </form>
            </div>
        </div>
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Empresa</th>
                    <th>Endereço</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var contact in Model)
                    {
                        <tr class="active">
                            <td>@contact.Name</td>
                            <td>@contact.Company</td>
                            <td>@contact.Address</td>
                            <td class="col-lg-2"> <a asp-action="Edit" class="btn btn-info" asp-route-id="@contact.Id"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                            <td> <a asp-action="Delete" class="btn btn-danger" asp-route-id="@contact.Id"><span class="glyphicon glyphicon-remove"></span></a></td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="5">Não há contatos Cadastratos</td></tr>
                }
            </tbody>
        </table>
        <div class="row">
            <a asp-action="Contact" class="btn btn-info">Novo Contato</a>
        </div>
    </div>

</div>
